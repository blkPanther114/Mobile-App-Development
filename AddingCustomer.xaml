<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomerApp.AddingCustomer">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Customer Details!" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" 
                   TextColor="Blue"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name" VerticalOptions="Center" HorizontalOptions="Start"></Label>
                <Entry x:Name="txtNameCustomer" VerticalOptions="Center" HorizontalOptions="FillAndExpand"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name" VerticalOptions="Center" HorizontalOptions="Start"></Label>
                <Picker x:Name="pckChangeImage" Title="Select an image" SelectedIndexChanged="pckChangeImage_SelectedIndexChanged">
                </Picker>    
            </StackLayout>
            <Image x:Name="imgCustomerImage" Aspect="AspectFit" WidthRequest="50" HeightRequest="50" VerticalOptions="Center"></Image>
            <Button x:Name="btnAddCustomer" Text="Confirm" Clicked="btnAddCustomer_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>